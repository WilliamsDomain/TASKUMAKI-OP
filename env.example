# WhatsApp Group Manager Bot Configuration

# Bot Settings
BOT_NAME=GroupManager
BOT_PREFIX=/
BOT_ADMIN_PHONE=+1234567890

# Database
DATABASE_PATH=./database/bot.db

# Web Dashboard
WEB_PORT=3000
WEB_HOST=localhost
DASHBOARD_PASSWORD=admin123

# Auto-Moderation Settings
MAX_WARNINGS=3
WARNING_EXPIRE_DAYS=30
SPAM_THRESHOLD=5
FLOOD_PROTECTION_SECONDS=2

# Welcome Messages
WELCOME_MESSAGE=Welcome to the group! Please read the rules and enjoy your stay.
WELCOME_ENABLED=true

# Anti-Spam Settings
ANTISPAM_ENABLED=true
ANTILINK_ENABLED=true
ALLOWED_DOMAINS=github.com,google.com,youtube.com

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/bot.log

# Deployment
NODE_ENV=production
PORT=3000
